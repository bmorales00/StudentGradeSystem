@model IEnumerable<Student>

@{
    ViewBag.Title = "Index";
    Layout = "_Layout";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary" style="font-style: italic">Students</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus-fill"></i> &nbsp; Add Student
            </a>
        </div>
        
    </div>
    <br/>

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
    <tr>
        <th>
            #
        </th>
        
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            Classes
        </th>
        <th>
            Student Options
        </th>
        
    </tr>
    </thead>
    
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width:100>
                    @obj.Id
              
                </td>
                <td width:100>
                    @obj.FirstName
                </td>
                <td width:100>
                    @obj.LastName
                </td>
                <td width:100>
                    @obj.Email
                </td>
                <td width:100>
                    <div class="w-80 btn-group" role="group">
                        <a asp-controller="Course" asp-action="Index" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-1"> <i class="bi bi-list-ol"></i> Courses</a>
                    </div>
                </td>
                <td >
                
                    <div class="w-80 btn-group" role="group">
                        <a asp-controller="Student" asp-action="Edit" asp-route-id="@obj.Id" 
                           class="btn btn-primary mx-1"> <i class="bi bi-pencil-square"></i> Edit</a>
                    </div>
                  
                
                
                    <div class="w-80 btn-group" role="group">
                        <a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.Id" 
                           class="btn btn-primary mx-1"> <i class="bi bi-trash3-fill"></i> Remove</a>
                    </div>
                    
                
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
